{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false
    },
    "include": [
        "./src/**/*"
    ]
}